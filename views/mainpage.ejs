<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Game Inforum</title>
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
	<link rel="stylesheet" href="mainpagestyle.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
	<link href='http://fonts.googleapis.com/css?family=Varela+Round' rel='stylesheet' type='text/css'>
</head>
<body>
	<div class="pure-g wrapper">

		<!-- header -->
		<header class="pure-u-1">
			<div class="header-box">
				<img class="pure-img bannerimg" src="/gameforumbanner.png">
			</div>
			<div class="pure-u-1 banner-sep"> </div>
		</header>

		<!-- Iterating subforums -->
		<div class="pure-g container">
			<div class="pure-g"> 
				<div class="pure-u-1 subforum">
					<strong>Game Forum Boards</strong>
				</div>
			</div>

			<div class="pure-g">
				<% rows.forEach(function(elem){ %>
					<div class="pure-g subforums"> 
						<div class="pure-u-1-24">
							<img class="pure-img" src="<%=elem.img%>"> 
						</div>
						<div class="pure-u-12-24">
							 &nbsp <a href="/forums/threads/<%=elem.id%>"> <strong><%= elem.topics %></strong> </a>
						</div>
						<div class="pure-u-22-24 subforum-comment">
							&nbsp Post anything related to <%=elem.topics%> here
						</div>
					</div>
				<% }) %>
			</div>
		</div>

		<!-- copyright -->
			<footer class="pure-u-1">
		      	<p class="copyright">&copy; 2015 Matt Yeung</p>
		      	<nav class="pure-menu pure-menu-horizontal pure-u-1 about-contact">
		      		<a href="/contact/new">Contact</a>
		      	</nav>
			</footer>
	</div>
	<script src="script.js"></script>
</body>
</html>